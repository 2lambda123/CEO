__global__ void mvm_input_order(float2 *x_out, int n_x_out, 
                                float *x_in, int n_x_in, 
                                unsigned int *ind) 
{
  int k;
  k = blockIdx.x * blockDim.x + threadIdx.x;
  if (k<n_x_out) {
    x_out[k].x = 0.0;
    x_out[k].y = 0.0;
  }
  __syncthreads();
  if (k<n_x_in) {
    x_out[ind[k]].x = x_in[k];
  }
}
