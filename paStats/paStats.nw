    C.setup(N_[k_N],osf,&atm,0.1);
    
    comp_eval_et[k_N] = C.cov_eval_et;
    b_full[k_N] = C.b_full;
    b_comp[k_N] = C.b_comp;

    tid.tic();
    C.MVM(d__y,d__x);
